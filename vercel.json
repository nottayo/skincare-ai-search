{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    },
    {
      "src": "backend/api/cart.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/api/ai-search.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cart",
      "dest": "/backend/api/cart.js"
    },
    {
      "src": "/api/ai-search",
      "dest": "/backend/api/ai-search.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "backend/api/cart.js": {
      "maxDuration": 30
    },
    "backend/api/ai-search.js": {
      "maxDuration": 30
    }
  },
  "ignoreCommand": "echo 'Skipping Python files'"
} 